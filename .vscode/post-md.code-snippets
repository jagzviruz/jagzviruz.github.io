{
	"frontmatter": {
    "scope": "markdown,md",
    "prefix": "frm",
    "description": "Generates frontmatter skeleton for blog",
    "body": [
      "---",
      "title: ${1:Title of the post}",
      "slug: /${2:Slug-for-the-post}",
      "date: '${CURRENT_YEAR}-${CURRENT_MONTH}-${CURRENT_DATE}T${CURRENT_HOUR}:${CURRENT_MINUTE}'",
      "spoiler: ${3:Short description for post}",
      "tags: ['${4:Tags}']",
      "keywords: ['${5:Keywords}']",
      "---",
      "$0"
    ]
  }
}
